    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>KpRest</artifactId>
        <groupId>si.fri.kp.KpRest</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>api</artifactId>
    <properties>
        <kumuluzee-rest.version>1.4.0</kumuluzee-rest.version>
